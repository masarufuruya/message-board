<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <li>
        <%= @message.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
        </li>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
      <%= f.label :name, '名前', class: "col-sm-1 control-label" %>
      <div class="col-sm-11">
        <%= f.text_field :name, class: "form-control", placeholder: '名前' %>
      </div>
  </div>
  <div class="form-group">
      <%= f.label :age, '年齢', class: "col-sm-1 control-label" %>
      <div class="col-sm-11">
         <%= f.text_field :age, class: "form-control", type: "number", placeholder: "年齢" %>
      </div>
  </div>
  <div class="form-group">
      <%= f.label :body, '内容', class: "col-sm-1 control-label" %>
      <div class="col-sm-11">
        <%= f.text_area :body, class: "form-control", placeholder: "メッセージ内容" %>      
      </div>
  </div>
  <div class="form-group">
      <div class="col-sm-1"></div>
      <div class="col-sm-11">
        <div class="btn-wrap">
          <%= f.submit "送信する", class: "btn btn-success" %>
        </div>
      </div>
  </div>
<% end %>
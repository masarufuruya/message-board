
<div class="container-inner">
  <div class="panel panel-default">
      <div class="panel-heading">
          メッセージ一覧
      </div>
      <div class="panel-body">
          <% @messages.each do |message| %>
            <span class="label label-info">
                <%= message.name %>    
            </span>
            <span>
                <%= message.body %>
            </span>
            <br>
          <% end %>
      </div>
  </div>
  <%= render 'form' %>
</div>
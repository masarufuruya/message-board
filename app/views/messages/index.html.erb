
<div class="container-inner">
  <div class="panel panel-default">
      <div class="panel-heading">
          メッセージ一覧
      </div>
      <div class="panel-body">
          <% @messages.each do |message| %>
            <span class="label label-info">
                <%= message.name %>    
            </span>
            <span>
                <%= message.body %>
            </span>
            <br>
          <% end %>
      </div>
  </div>
  
  <%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
      <div class="form-group">
          <%= f.label :name, '名前', class: "col-sm-1 control-label" %>
          <div class="col-sm-11">
            <%= f.text_field :name, class: "form-control", placeholder: '名前' %>
          </div>
      </div>
      <div class="form-group">
          <%= f.label :body, '内容', class: "col-sm-1 control-label" %>
          <div class="col-sm-11">
            <%= f.text_area :body, class: "form-control", placeholder: "メッセージ内容" %>      
          </div>
      </div>
      <div class="form-group">
          <div class="col-sm-1"></div>
          <div class="col-sm-11">
            <div class="btn-wrap">
              <%= f.submit "送信する", class: "btn btn-success" %>
            </div>
          </div>
      </div>
  <% end %>
</div>